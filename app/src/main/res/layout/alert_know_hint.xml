<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_background_radius"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/default_margin_size_2"
        android:layout_marginEnd="@dimen/default_margin_size_2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/know_hint_title"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size_18sp"
            android:background="@drawable/btn_know_hint_back"
            android:paddingTop="@dimen/default_margin_size_3"
            android:paddingBottom="@dimen/default_margin_size_3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_margin_size_2"
            android:text="@string/know_message_title"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_20sp" />

        <TextView
            android:id="@+id/alert_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_about_update_ok"
            android:gravity="center"
            android:paddingTop="@dimen/default_margin_size"
            android:paddingBottom="@dimen/default_margin_size"
            android:layout_margin="@dimen/default_margin_size_2"
            android:textColor="@color/blue"
            android:textSize="@dimen/default_text_size_18sp" />
    </LinearLayout>