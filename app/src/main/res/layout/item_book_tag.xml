<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_group_search_tag"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="@dimen/default_margin_size_1"
    android:paddingStart="@dimen/default_margin_size"
    android:paddingEnd="@dimen/default_margin_size">

    <TextView
        android:id="@+id/book_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_tag"
        android:textColor="@color/blue"
        android:textSize="@dimen/default_text_size_18sp" />
</LinearLayout>