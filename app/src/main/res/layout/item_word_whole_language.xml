<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/default_margin_size_2"
        android:paddingEnd="@dimen/default_margin_size_2"
        android:paddingTop="@dimen/default_margin_size"
        android:paddingBottom="@dimen/default_margin_size"
        android:gravity="center">

    <ImageView
            android:id="@+id/whole_language_img"
            android:layout_width="@dimen/whole_language_img"
            android:layout_height="@dimen/whole_language_img"
            android:layout_marginBottom="-4dp"
            android:src="@drawable/pic_lang_cn"/>

    <ImageView
        android:id="@+id/whole_language_img_select"
        android:layout_width="@dimen/whole_language_img_select_width"
        android:layout_height="@dimen/whole_language_img_select_height"
        android:layout_marginTop="-83dp"
        android:alpha="0.7"
        android:background="@drawable/btn_whole_language_img_select"
        android:src="@drawable/pic_lang_select"
        android:visibility="gone" />

    <TextView
            android:id="@+id/whole_language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_size_2_1"
            android:text="@string/whole_language_text"
            android:textColor="@color/black"
            android:textSize="@dimen/whole_language_text_size"/>
</LinearLayout>