<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_background_radius"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_size"
            android:text="@string/value_title"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp"

            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/alert_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_id_delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin_size"
            android:src="@drawable/icon_star_1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin_size"
            android:src="@drawable/icon_star_2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin_size"
            android:src="@drawable/icon_star_3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin_size"
            android:src="@drawable/icon_star_4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_star_smile" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value_message"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_20sp"
        android:layout_margin="@dimen/default_margin_size_2"/>

    <TextView
        android:id="@+id/alert_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value_ok"
        android:textSize="@dimen/default_text_size_18sp"
        android:textColor="@color/black_3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_margin="@dimen/default_margin_size_2"/>

    <TextView
        android:id="@+id/alert_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value_cancel"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_18sp"
        android:layout_marginBottom="@dimen/default_margin_size_2"/>
</LinearLayout>