<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/friend_search_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="@dimen/default_margin_size"
        android:layout_marginBottom="@dimen/default_margin_size_5">

        <ImageView
            android:id="@+id/friend_search_out"
            android:layout_width="@dimen/default_margin_size_2"
            android:layout_height="@dimen/default_margin_size_2"
            android:src="@drawable/icon_acionbar_back_white"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/friend_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friend_search_title"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/default_margin_size"/>

        <TextView
            android:id="@+id/friend_search_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friend_search_title"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_friend_search_edit"
            android:text="@string/friend_search_edit"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_5"
            android:gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search_gray"
            android:layout_below="@+id/friend_search_edit"
            android:layout_marginTop="-24dp"
            android:layout_marginStart="@dimen/default_margin_size_6"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/friend_add_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_search_relative"
        android:src="@drawable/icon_phone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/default_margin_size_6"
        android:layout_marginBottom="@dimen/default_margin_size"/>
    <TextView
        android:id="@+id/friend_add_phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_add_phone"
        android:text="@string/friend_add_phone_text"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_4"
        android:layout_marginStart="@dimen/default_margin_size_3"
        android:layout_marginBottom="@dimen/default_margin_size"/>
    <TextView
        android:id="@+id/friend_add_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_add_phone_text"
        android:text="@string/friend_add_phone_number"
        android:textColor="@color/black_2"
        android:textSize="@dimen/default_text_size_4"
        android:layout_marginStart="@dimen/default_margin_size_5"
        android:layout_marginBottom="@dimen/default_margin_size_4"/>
    <ImageView
        android:id="@+id/friend_add_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_search_relative"
        android:src="@drawable/icon_weibo"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/default_margin_size_6"
        android:layout_marginBottom="@dimen/default_margin_size"/>
    <TextView
        android:id="@+id/friend_add_weibo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_add_weibo"
        android:text="@string/friend_add_weibo_text"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/default_margin_size_4"
        android:layout_marginBottom="@dimen/default_margin_size"/>
    <TextView
        android:id="@+id/friend_add_weibo_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_add_weibo_text"
        android:text="@string/friend_add_weibo_number"
        android:textColor="@color/black_2"
        android:textSize="@dimen/default_text_size_4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/default_margin_size_4"
        android:layout_marginBottom="@dimen/default_margin_size_4"/>
    <TextView
        android:id="@+id/friend_add_head"
        android:layout_below="@+id/friend_add_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/friend_add_head"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_4"
        android:layout_marginStart="@dimen/default_margin_size"
        android:layout_marginBottom="@dimen/default_margin_size_5"/>
    <ImageView
        android:id="@+id/friend_add_weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_add_head"
        android:src="@drawable/icon_phone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/default_margin_size_6"
        android:layout_marginBottom="@dimen/default_margin_size"/>
    <TextView
        android:id="@+id/friend_add_weixin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_add_weixin"
        android:text="@string/friend_add_weixin_text"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_4"
        android:layout_marginStart="@dimen/default_margin_size_3"
        android:layout_marginBottom="@dimen/default_margin_size"/>
    <ImageView
        android:id="@+id/friend_add_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_add_head"
        android:src="@drawable/icon_qq2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/default_margin_size_6"
        android:layout_marginBottom="@dimen/default_margin_size"/>
    <TextView
        android:id="@+id/friend_add_qq_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_add_qq"
        android:text="@string/friend_add_qq_text"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/default_margin_size_4"
        android:layout_marginBottom="@dimen/default_margin_size"/>
</RelativeLayout>