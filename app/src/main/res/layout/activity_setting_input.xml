<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"/>
    <RelativeLayout
        android:id="@+id/input_one_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_size">
        <TextView
            android:id="@+id/input_one_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/input_one_title"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size" />
        <ImageView
            android:id="@+id/input_one_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_list_select" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/input_two_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_size">
        <TextView
            android:id="@+id/input_two_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/input_two_title"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size" />

        <ImageView
            android:id="@+id/input_two_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_list_select"
            android:visibility="gone" />
    </RelativeLayout>
    <TextView
        android:id="@+id/input_three_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_size"
        android:layout_marginStart="@dimen/default_margin_size"
        android:layout_marginEnd="@dimen/default_margin_size"
        android:gravity="center"
        android:text="@string/input_three_text"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_4" />
</LinearLayout>







