<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            app:contentInsetStart="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_size"
                android:layout_marginEnd="@dimen/default_margin_size">
                <ImageView
                    android:id="@+id/phone_contact_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_acionbar_back_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/phone_contact_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_text_size"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_margin_size">
        <TextView
            android:id="@+id/phone_contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_contact_title"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/default_margin_size_2"
            android:layout_marginTop="140dp"/>
        <TextView
            android:id="@+id/phone_contact_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_contact_explain"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_4"
            android:layout_below="@+id/phone_contact_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/default_margin_size_5"/>

        <TextView
            android:id="@+id/phone_contact_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_contact_start"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size"
            android:background="@drawable/btn_word_manage_start"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/phone_contact_explain"
            android:paddingBottom="@dimen/default_margin_size"
            android:paddingTop="@dimen/default_margin_size"
            android:paddingStart="@dimen/default_margin_size_3"
            android:paddingEnd="@dimen/default_margin_size_3"/>
        <TextView
            android:id="@+id/phone_contact_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_contact_bottom"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/default_margin_size"/>
    </RelativeLayout>
</LinearLayout>





