<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/btn_background_radius"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/default_margin_size_2"
    android:layout_marginEnd="@dimen/default_margin_size_2">

    <TextView
        android:id="@+id/alert_word_manage_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/u_dialog_top_across_book_pk"
        android:gravity="center"
        android:padding="@dimen/default_margin_size"
        android:text="@string/pk_book_text"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_18sp" />

    <TextView
        android:id="@+id/alert_word_manage_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/default_margin_size_2"
        android:text="@string/pk_book_message"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/alert_word_manage_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/default_margin_size"
            android:paddingTop="@dimen/default_margin_size"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp" />

        <TextView
            android:id="@+id/alert_word_manage_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/default_margin_size"
            android:paddingTop="@dimen/default_margin_size"
            android:textColor="@color/blue"
            android:textSize="@dimen/default_text_size_18sp" />
    </LinearLayout>
</LinearLayout>








