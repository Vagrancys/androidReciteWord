<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_rank_data_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_size">

        <ImageView
            android:id="@+id/item_rank_data_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/default_margin_size"
            android:src="@drawable/crown_1" />

        <ImageView
            android:id="@+id/item_ranK_data_avatar"
            android:layout_width="@dimen/default_margin_size_5"
            android:layout_height="@dimen/default_margin_size_5"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/default_margin_size_2"
            android:layout_toEndOf="@+id/item_rank_data_level"
            android:src="@drawable/icon_avatar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/item_ranK_data_avatar"
            android:text="@string/item_rank_data_name"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/default_margin_size_2"
            android:layout_marginStart="@dimen/default_margin_size"
            android:layout_toStartOf="@+id/item_rank_data_number"
            android:src="@drawable/icon_star_smile" />

        <TextView
            android:id="@+id/item_rank_data_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/default_margin_size"
            android:layout_marginStart="@dimen/default_margin_size"
            android:text="@string/item_rank_data_number"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_rank_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size_2"
        android:text="@string/item_rank_data_text"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_18sp"
        android:visibility="gone" />
</LinearLayout>