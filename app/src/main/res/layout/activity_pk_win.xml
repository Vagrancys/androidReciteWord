<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/win_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_margin_size">
    <ImageView
        android:id="@+id/win_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:id="@+id/win_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/win_bottom"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/win_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_margin_size_7"
                android:layout_marginTop="@dimen/default_margin_size" />

            <ImageView
                android:id="@+id/win_img_feel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/default_margin_size_1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/win_feel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_size_2"
            android:layout_marginBottom="@dimen/default_margin_size"
            android:text="@string/pk_win_img_bottom"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size_18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/win_one_back"
                        android:layout_width="@dimen/default_margin_size_16"
                        android:layout_height="@dimen/default_margin_size_16"
                        android:src="@drawable/user_avater" />

                    <ImageView
                        android:id="@+id/win_one_avatar"
                        android:layout_width="@dimen/default_margin_size_9"
                        android:layout_height="@dimen/default_margin_size_9"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/default_margin_size_2"
                        android:src="@drawable/user_avater" />

                    <ImageView
                        android:id="@+id/win_one_head"
                        android:layout_width="@dimen/default_margin_size_4"
                        android:layout_height="@dimen/default_margin_size_4"
                        android:layout_alignTop="@+id/win_one_avatar"
                        android:layout_marginStart="@dimen/default_margin_no_size_5"
                        android:layout_marginTop="@dimen/default_margin_no_size_2"
                        android:layout_toEndOf="@+id/win_one_avatar"
                        android:src="@drawable/bg_card_fail" />

                    <ImageView
                        android:id="@+id/win_one_foot"
                        android:layout_width="@dimen/default_margin_size_4"
                        android:layout_height="@dimen/default_margin_size_4"
                        android:layout_below="@+id/win_one_avatar"
                        android:layout_marginStart="@dimen/default_margin_no_size_5"
                        android:layout_marginTop="@dimen/default_margin_no_size_4"
                        android:layout_toEndOf="@+id/win_one_avatar"
                        android:src="@drawable/bg_card_fail" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/win_one_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_no_size_2"
                    android:paddingTop="@dimen/default_margin_size_1"
                    android:paddingBottom="@dimen/default_margin_size"
                    android:text="@string/win_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_text_size_18sp" />

                <TextView
                    android:id="@+id/win_one_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_margin_size_1"
                    android:text="@string/pk_win_enemy_name_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_text_size_30sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/win_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/win_two_avatar"
                    android:layout_width="@dimen/default_margin_size_9"
                    android:layout_height="@dimen/default_margin_size_9"
                    android:layout_margin="@dimen/default_margin_size_2"
                    android:src="@drawable/user_avater" />

                <TextView
                    android:id="@+id/win_two_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_no_size_2"
                    android:paddingTop="@dimen/default_margin_size_1"
                    android:paddingBottom="@dimen/default_margin_size"
                    android:text="@string/win_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_text_size_18sp" />

                <TextView
                    android:id="@+id/win_two_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_margin_size_1"
                    android:text="@string/pk_win_enemy_name_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_text_size_30sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_size"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/win_star"
                android:layout_width="@dimen/default_margin_size_5"
                android:layout_height="@dimen/default_margin_size_5"
                android:layout_marginEnd="@dimen/default_margin_size"
                android:src="@drawable/bg_card_fail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_size"
                android:layout_marginEnd="@dimen/default_margin_size"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pk_win_star_text"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/show_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_size_2"
            android:layout_marginBottom="@dimen/default_margin_size_7"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/default_margin_size">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pk_open_text"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_18sp" />

            <ImageView
                android:id="@+id/win_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_card_fail" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/win_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/win_bottom"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/details_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/default_margin_size_2"
            android:paddingEnd="@dimen/default_margin_size_3"
            android:paddingBottom="@dimen/default_margin_size">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/default_margin_size"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/details_one_avatar"
                    android:layout_width="@dimen/default_margin_size_4"
                    android:layout_height="@dimen/default_margin_size_4"
                    android:src="@drawable/icon_avatar" />

                <ImageView
                    android:id="@+id/details_two_avatar"
                    android:layout_width="@dimen/default_margin_size_4"
                    android:layout_height="@dimen/default_margin_size_4"
                    android:layout_marginStart="@dimen/default_margin_size_3"
                    android:src="@drawable/icon_avatar" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/pk_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_text_size_18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/details_one_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/pk_win_name_number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_text_size_14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/default_margin_size_2_1"
                        android:layout_marginEnd="@dimen/default_margin_size_2_1"
                        android:text="vs"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/default_text_size_14sp" />

                    <TextView
                        android:id="@+id/details_two_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/pk_win_enemy_name_number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_text_size_14sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/details_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/details_number"
            android:background="@color/white"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/win_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_size"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/default_margin_size"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/win_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin_size" />

        <ImageView
            android:id="@+id/win_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_size" />
    </LinearLayout>
</RelativeLayout>