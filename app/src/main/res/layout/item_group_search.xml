<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_margin_size"
    android:layout_marginEnd="@dimen/default_margin_size"
    android:layout_marginStart="@dimen/default_margin_size">
    <ImageView
        android:id="@+id/group_search_avatar"
        android:layout_width="@dimen/default_margin_size_4"
        android:layout_height="@dimen/default_margin_size_4"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/default_margin_size"
        android:src="@drawable/icon_avatar" />

    <TextView
        android:id="@+id/group_search_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/group_search_avatar"
        android:text="@string/group_search_name"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_18sp"
        android:layout_marginBottom="@dimen/default_margin_size_1"
        android:layout_marginEnd="@dimen/default_margin_size"/>
    <ImageView
        android:id="@+id/group_search_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/group_search_name"
        android:layout_alignParentTop="true"
        android:src="@drawable/group_level_small_1"
        android:layout_marginTop="@dimen/default_margin_size_1"/>
    <TextView
        android:id="@+id/group_search_tag_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_search_name"
        android:layout_toEndOf="@+id/group_search_avatar"
        android:text="@string/group_search_tag"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_10sp"
        android:background="@drawable/btn_group_sign_bg"
        android:layout_marginEnd="@dimen/default_margin_size"/>

    <TextView
        android:id="@+id/group_search_tag_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_search_name"
        android:layout_marginEnd="@dimen/default_margin_size"
        android:layout_toEndOf="@+id/group_search_tag_one"
        android:background="@drawable/btn_group_sign_bg"
        android:text="@string/group_search_tag"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_10sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/group_search_tag_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_search_name"
        android:layout_toEndOf="@+id/group_search_tag_two"
        android:background="@drawable/btn_group_sign_bg"
        android:text="@string/group_search_tag"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_10sp"
        android:visibility="gone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_search_txt"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_14sp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/group_search_star"
        android:paddingEnd="@dimen/default_margin_size"/>
    <TextView
        android:id="@+id/group_search_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_search_number"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_14sp"
        android:layout_toStartOf="@+id/group_search_back"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/default_margin_size"/>
    <ImageView
        android:id="@+id/group_search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_go_task_detail"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/default_margin_size"/>
</RelativeLayout>