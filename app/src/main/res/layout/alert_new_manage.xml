<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_background_radius"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/default_margin_size_2"
        android:layout_marginEnd="@dimen/default_margin_size_2">

        <TextView
            android:id="@+id/alert_word_manage_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_word_manage_text"
            android:gravity="center"
            android:padding="@dimen/default_margin_size"
            android:text="@string/me_sign_title"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size_18sp" />

        <EditText
            android:id="@+id/alert_me_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_new_manage_edit"
            android:hint="@string/alert_manage_edit"
            android:gravity="center|left"
            android:paddingTop="@dimen/default_margin_size"
            android:paddingBottom="@dimen/default_margin_size"
            android:layout_marginStart="@dimen/default_margin_size_2"
            android:layout_marginEnd="@dimen/default_margin_size_2"
            android:layout_marginTop="@dimen/default_margin_size_3"
            android:layout_marginBottom="@dimen/default_margin_size"
            android:inputType="text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/alert_word_manage_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/default_margin_size"
                android:paddingTop="@dimen/default_margin_size"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size_18sp" />

            <TextView
                android:id="@+id/alert_word_manage_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/default_margin_size"
                android:paddingTop="@dimen/default_margin_size"
                android:textColor="@color/blue"
                android:textSize="@dimen/default_text_size_18sp" />
        </LinearLayout>
    </LinearLayout>
