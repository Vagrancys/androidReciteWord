<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin_size">

    <TextView
        android:id="@+id/error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/default_margin_size"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_18sp" />

    <TextView
        android:id="@+id/error_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/error_title"
        android:paddingStart="@dimen/default_margin_size"
        android:text="@string/error_hint"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_16sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/error_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:button="@drawable/manage_check_bg" />

    <EditText
        android:id="@+id/error_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_title"
        android:background="@drawable/btn_group_add_edit"
        android:gravity="top"
        android:hint="@string/error_edit_hint"
        android:inputType="text"
        android:minHeight="@dimen/default_margin_size_10"
        android:minLines="5"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_14sp"
        android:visibility="gone" />
    <View
        android:id="@+id/error_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_1"
        android:layout_below="@id/error_title"/>
</RelativeLayout>