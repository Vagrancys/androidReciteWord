<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_exam_fail_head_bg"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_size_4"
            android:src="@drawable/img_exam_fail_head_title"/>
        <TextView
            android:id="@+id/error_gate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anim_error_gate_text"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size_18sp"/>
        <TextView
            android:id="@+id/error_feel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anim_error_gate_feel_text"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size_18sp"
            android:layout_marginTop="@dimen/default_margin_size"
            android:layout_marginBottom="@dimen/default_margin_size_3"/>
    </LinearLayout>
    <TextView
        android:id="@+id/error_head_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_head_text"
        android:textSize="@dimen/default_text_size_18sp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/default_margin_size_2"/>
</LinearLayout>
