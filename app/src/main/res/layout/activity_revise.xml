<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetStart="@dimen/default_margin_size_0"
                android:background="@color/blue">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/default_margin_size"
                    android:paddingTop="@dimen/default_margin_size_1"
                    android:paddingEnd="@dimen/default_margin_size"
                    android:paddingBottom="@dimen/default_margin_size_1">
                    <ImageView
                        android:id="@+id/default_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/back"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerInParent="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/revise_head_text"
                            android:textSize="@dimen/default_text_size_16sp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/revise_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/default_margin_size_1"
                            android:text="@string/revise_title_text"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_text_size_14sp"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/default_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="@string/revise_list_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size_18sp"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_size_3"
            android:background="@drawable/btn_background_radius"
            android:padding="@dimen/default_margin_size_2_1">

            <ImageView
                android:id="@+id/revise_help"
                android:layout_width="@dimen/default_margin_size_2"
                android:layout_height="@dimen/default_margin_size_2"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/group_lobby_rule_icon"/>

            <LinearLayout
                android:id="@+id/no_word"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/default_margin_size_4"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/default_margin_size_26"
                    android:layout_height="@dimen/default_margin_size_30"
                    android:src="@drawable/review_empty_icon_for_no_word" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/default_margin_size_2"
                    android:text="@string/revise_text_two"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/default_text_size_24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_size"
                    android:layout_marginBottom="@dimen/default_margin_size_5"
                    android:text="@string/revise_text_three"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/default_text_size_18sp" />

                <TextView
                    android:id="@+id/no_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/review_btn_bg"
                    android:gravity="center"
                    android:text="@string/revise_text_one"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_text_size_18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/now_word"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/default_margin_size_4"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/default_margin_size_5"
                    android:text="@string/revise_day_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_text_size_30sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_size_2"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/now_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/revise_number_text"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/default_text_size_24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin_size_1"
                        android:text="@string/revise_num_text"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/default_text_size_18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/now_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/revise_done_numbers_text"
                    android:textColor="@color/black_2"
                    android:textSize="@dimen/default_text_size_18sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_size_2"
                    android:layout_marginBottom="@dimen/default_margin_size_2"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="@dimen/default_margin_size_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/default_margin_size"
                            android:text="@string/revise_word_text"
                            android:textColor="@color/black_1"
                            android:textSize="@dimen/default_text_size_24sp" />

                        <LinearLayout
                            android:id="@+id/now_count_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/now_count_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/default_margin_size"
                                android:text="@string/revise_word_left_text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/default_text_size_18sp" />

                            <ImageView
                                android:id="@+id/now_count_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_submenu" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/default_margin_size_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/default_margin_size"
                            android:text="@string/revise_class_text"
                            android:textColor="@color/black_1"
                            android:textSize="@dimen/default_text_size_24sp" />

                        <LinearLayout
                            android:id="@+id/now_class_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/now_class_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/revise_class_left_text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/default_text_size_18sp" />

                            <ImageView
                                android:id="@+id/now_class_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_margin_size"
                                android:src="@drawable/icon_submenu" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/now_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/review_btn_bg"
                    android:gravity="center"
                    android:text="@string/revise_start_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_text_size_16sp" />

                <LinearLayout
                    android:id="@+id/now_select_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/revise_bottom_text1"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/default_text_size_18sp" />

                    <TextView
                        android:id="@+id/now_select_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_margin_size_1"
                        android:text="@string/revise_bottom_text"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/default_text_size_18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_margin_size_1"
                        android:text="@string/revise_bottom_text2"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/default_text_size_18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_go_task_detail" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/done_word"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/default_margin_size_4"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/default_margin_size_26"
                    android:layout_height="@dimen/default_margin_size_30"
                    android:src="@drawable/img_review_finished" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/default_margin_size_2"
                    android:paddingBottom="@dimen/default_margin_size_3"
                    android:text="@string/revise_done_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_text_size_24sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/default_margin_size_4">

                    <TextView
                        android:id="@+id/done_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/revise_done_number_text"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/default_text_size_20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin_size_1"
                        android:text="@string/revise_done_num_text"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/default_text_size_16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/default_margin_size_2">

                    <TextView
                        android:id="@+id/done_select"
                        android:layout_width="@dimen/default_margin_size_0"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_margin_size_2"
                        android:layout_weight="1"
                        android:background="@drawable/btn_revise_button"
                        android:gravity="center"
                        android:padding="@dimen/default_margin_size_2"
                        android:text="@string/revise_select_text"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/default_text_size_18sp" />

                    <TextView
                        android:id="@+id/done_recite"
                        android:layout_width="@dimen/default_margin_size_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_revise_button"
                        android:gravity="center"
                        android:padding="@dimen/default_margin_size_2"
                        android:text="@string/revise_recite_text"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/default_text_size_18sp" />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/common_revise_layout"/>
</FrameLayout>











