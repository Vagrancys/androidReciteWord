<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/default_margin_size_1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_size_1"
        android:src="@drawable/icon_group_lobby_member" />

    <TextView
        android:id="@+id/group_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_message_text"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size_10sp" />
</LinearLayout>