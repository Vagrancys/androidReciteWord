<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_margin_size">

    <ImageView
        android:id="@+id/item_view_avatar"
        android:layout_width="@dimen/default_margin_size_4"
        android:layout_height="@dimen/default_margin_size_4"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon_avatar"
        android:layout_marginEnd="@dimen/default_margin_size"/>

    <TextView
        android:id="@+id/item_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/default_margin_size"
        android:layout_toEndOf="@+id/item_view_avatar"
        android:text="@string/item_group_title"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_14sp"
        android:layout_marginTop="@dimen/default_margin_size_1"/>

    <LinearLayout
        android:id="@+id/item_view_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_view_name"
        android:layout_toEndOf="@+id/item_view_avatar"
        android:background="@drawable/btn_yellow_bg"
        android:layout_marginEnd="@dimen/default_margin_size_1"
        android:layout_marginBottom="@dimen/default_margin_size_2_1"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin_size_1"
            android:src="@drawable/icon_group_lobby_member" />

        <TextView
            android:id="@+id/item_view_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_group_learn_member"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size_10sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/item_view_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_view_name"
        android:layout_toEndOf="@+id/item_view_num"
        android:text="@string/item_group_learn_done"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size_12sp"
        android:background="@drawable/btn_group_item_bg"
        android:layout_marginEnd="@dimen/default_margin_size_1"/>
    <TextView
        android:id="@+id/item_view_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_view_name"
        android:layout_toEndOf="@+id/item_view_done"
        android:text="@string/item_group_tag"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size_12sp"
        android:background="@drawable/btn_green_bg"/>
    <TextView
        android:id="@+id/item_view_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_group_sign"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_12sp"
        android:layout_below="@+id/item_view_num"
        android:layout_toEndOf="@+id/item_view_avatar"
        android:background="@drawable/btn_group_item_bg"
        android:paddingStart="@dimen/default_margin_size"
        android:paddingTop="@dimen/default_margin_size_1"
        android:paddingBottom="@dimen/default_margin_size_1"
        android:layout_marginEnd="@dimen/default_margin_size_1"/>
    <TextView
        android:id="@+id/item_view_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_group_learn_add"
        android:textColor="@color/blue"
        android:textSize="@dimen/default_text_size_14sp"
        android:background="@drawable/btn_group_add_bg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingStart="@dimen/default_margin_size_2"
        android:paddingEnd="@dimen/default_margin_size_2"
        android:layout_marginBottom="@dimen/default_margin_size_1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/item_view_add"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/default_margin_size">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_group_learn_target"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_14sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_size_1"
            android:src="@drawable/icon_star_group_small"/>
        <TextView
            android:id="@+id/item_view_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_group_learn_number"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_14sp"/>
    </LinearLayout>
</RelativeLayout>