<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/word_search_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_back"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/default_margin_size"/>
                <EditText
                    android:id="@+id/word_search_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_search_member_edit"
                    android:layout_toEndOf="@+id/word_search_out"
                    android:layout_toStartOf="@+id/word_search_to"
                    android:layout_centerVertical="true"
                    android:hint="@string/word_search_edit"
                    android:inputType="text"/>

                <ImageView
                    android:id="@+id/word_search_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-30dp"
                    android:layout_toEndOf="@+id/word_search_edit"
                    android:src="@drawable/icon_search_delete"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/word_search_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_search"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/default_margin_size"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/word_search_sliding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:tl_tab_space_equal="true"
        app:tl_textUnselectColor="@color/white_1"
        app:tl_textSelectColor="@color/white"
        app:tl_indicator_color="@color/white"
        app:tl_indicator_gravity="BOTTOM"
        android:paddingTop="@dimen/default_margin_size_3"
        android:paddingBottom="@dimen/default_margin_size"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/word_search_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    </android.support.v4.view.ViewPager>
</LinearLayout>