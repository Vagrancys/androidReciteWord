<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/open_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/open_head"
                android:layout_marginStart="@dimen/default_margin_size_2"
                android:layout_marginTop="@dimen/default_margin_no_size_4"
                android:layout_marginEnd="@dimen/default_margin_size_2"
                android:background="@drawable/recite_open_gradient_back"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/default_margin_size_9">

                <TextView
                    android:id="@+id/open_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_size_3"
                    android:gravity="center"
                    android:text="@string/open_title_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_text_size_24sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/default_margin_size_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/open_day_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size_24sp"
                        android:layout_marginBottom="@dimen/default_margin_size"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/open_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/open_day_num_text"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_text_size_30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_margin_size_1"
                            android:text="@string/open_days_text"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_text_size_18sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin_size_2"
                        android:text="@string/open_day_num"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size_24sp"
                        android:layout_marginBottom="@dimen/default_margin_size"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/open_word"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/open_recite_num"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_text_size_30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_margin_size_1"
                            android:text="@string/open_recites_text"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_text_size_18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin_size_2"
                        android:layout_marginBottom="@dimen/default_margin_size_4"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/open_avatar"
                            android:layout_width="@dimen/default_margin_size_5"
                            android:layout_height="@dimen/default_margin_size_5"
                            android:background="@drawable/user_circle"
                            android:src="@drawable/user_avater" />

                        <TextView
                            android:id="@+id/open_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_margin_size"
                            android:text="@string/open_time_text"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_text_size_12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/open_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/default_margin_no_size_1"
                android:src="@drawable/icon_new_show_off_congratulation" />

            <ImageView
                android:id="@+id/open_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/default_margin_no_size_2_1"
                android:src="@drawable/icon_new_show_off_congratulation_2" />

            <LinearLayout
                android:id="@+id/open_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/open_relative"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/default_margin_size_2"
                android:background="@drawable/btn_recite_anim_open_linear"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_wechat_moments_clocking_in" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin_size"
                    android:text="@string/open_linear_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_text_size_18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/open_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/open_share"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/default_margin_size_3"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/open_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_margin_size_2"
                    android:src="@drawable/icon_new_show_off_wechat" />

                <ImageView
                    android:id="@+id/open_weibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin_size_2"
                    android:layout_marginEnd="@dimen/default_margin_size_2"
                    android:src="@drawable/icon_new_show_off_weibo" />

                <ImageView
                    android:id="@+id/open_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin_size_2"
                    android:layout_marginEnd="@dimen/default_margin_size_2"
                    android:src="@drawable/icon_new_show_off_qq" />

                <ImageView
                    android:id="@+id/open_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin_size_2"
                    android:src="@drawable/icon_new_show_off_downloading" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/open_item"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/default_margin_size_2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_margin_size"
                    android:text="@string/open_short_text"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/default_text_size_14sp" />

                <ImageView
                    android:id="@+id/open_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_show_off_help" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/open_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_size"
        android:layout_marginStart="@dimen/default_margin_size"
        android:src="@drawable/icon_close_clocking_in" />
</FrameLayout>