<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_background_radius"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/default_margin_size_2"
    android:layout_marginEnd="@dimen/default_margin_size_2">
    <TextView
        android:id="@+id/privacy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_word_manage_text"
        android:gravity="center"
        android:padding="@dimen/default_margin_size"
        android:text="@string/privacy_policy_dialog_title"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size_18sp" />

    <TextView
        android:id="@+id/privacy_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/default_margin_size_2"
        android:text="@string/privacy_policy_dialog_message"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_16sp"/>

    <TextView
        android:id="@+id/privacy_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/default_margin_size"
        android:layout_marginBottom="@dimen/default_margin_size_3"
        android:layout_marginEnd="@dimen/default_margin_size_2"
        android:layout_marginStart="@dimen/default_margin_size_2"
        android:text="@string/privacy_policy_dialog_hint"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_16sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/default_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/default_margin_size"
            android:paddingTop="@dimen/default_margin_size"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp" />

        <TextView
            android:id="@+id/default_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/default_margin_size"
            android:paddingTop="@dimen/default_margin_size"
            android:textColor="@color/blue"
            android:textSize="@dimen/default_text_size_18sp" />
    </LinearLayout>
</LinearLayout>
