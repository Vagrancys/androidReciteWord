<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/task_list_background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/task_done_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/task_done_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/task_done_num_text"
            android:textSize="@dimen/default_text_size" />

        <ImageView
            android:layout_width="@dimen/task_done_head_img_width"
            android:layout_height="@dimen/task_done_head_img_height"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/default_margin_size_3"
            android:src="@drawable/complete_task_tips_img" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_task_list_item"
        android:orientation="vertical"
        android:padding="@dimen/default_margin_size">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/task_done_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/default_margin_size"
                android:src="@drawable/icon_task" />

            <TextView
                android:id="@+id/task_done_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/default_margin_size_2"
                android:layout_toEndOf="@+id/task_done_img"
                android:text="@string/task_done_title_text"
                android:textColor="@color/black"
                android:textSize="@dimen/task_list_title_text_size" />

            <TextView
                android:id="@+id/task_done_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_done_title"
                android:layout_marginTop="@dimen/default_margin_size"
                android:layout_toEndOf="@+id/task_done_img"
                android:text="@string/task_done_summary_text"
                android:textColor="@color/task_list_text_color"
                android:textSize="@dimen/task_list_summary_text_size" />

            <ImageView
                android:id="@+id/task_done_status"
                android:layout_width="@dimen/task_list_status_width"
                android:layout_height="@dimen/task_list_status_height"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/default_margin_size"
                android:src="@drawable/icon_task_complete" />
        </RelativeLayout>

        <View
            android:id="@+id/one_view"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginBottom="@dimen/default_margin_size"
            android:background="@color/view_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/task_done_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/default_margin_size"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/task_list_neck_img_width"
                    android:layout_height="@dimen/task_list_neck_img_height"
                    android:layout_marginEnd="@dimen/default_margin_size_1"
                    android:src="@drawable/icon_star_group_small" />

                <TextView
                    android:id="@+id/task_done_neck_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_list_neck_text"
                    android:textColor="@color/task_list_neck_text_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_list_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin_size"
                android:layout_toEndOf="@+id/task_done_star"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/task_list_neck_img_width"
                    android:layout_height="@dimen/task_list_neck_img_height"
                    android:layout_marginEnd="@dimen/default_margin_size_1"
                    android:src="@drawable/img_coin" />

                <TextView
                    android:id="@+id/task_done_neck_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_list_neck_text"
                    android:textColor="@color/task_list_neck_text_color" />
            </LinearLayout>

            <TextView
                android:id="@+id/task_done_neck_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/default_margin_size_2"
                android:text="@string/task_done_neck_summary_text"
                android:textColor="@color/task_list_text_color"
                android:textSize="@dimen/task_list_neck_summary_text_size" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>






