<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_background_radius"
    android:orientation="vertical"
    android:layout_margin="@dimen/default_margin_size">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_size">

        <ImageView
            android:id="@+id/task_done_img"
            android:layout_width="@dimen/default_margin_size_5"
            android:layout_height="@dimen/default_margin_size_5"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_task" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="vertical"
            android:paddingStart="@dimen/default_margin_size"
            android:layout_toEndOf="@+id/task_done_img"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/task_done_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_done_title_text"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size_16sp" />

            <TextView
                android:id="@+id/task_done_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/default_margin_size_1"
                android:text="@string/task_done_summary_text"
                android:textColor="@color/black_1"
                android:textSize="@dimen/default_text_size_14sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/task_done_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_task_complete"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/default_margin_size_1"
        android:background="@color/white_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_size">
        <LinearLayout
            android:id="@+id/task_done_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/default_margin_size"
            android:gravity="center|bottom">
            <ImageView
                android:layout_width="@dimen/default_margin_size_2"
                android:layout_height="@dimen/default_margin_size_2"
                android:layout_marginEnd="@dimen/default_margin_size_1"
                android:src="@drawable/icon_star_group_small" />
            <TextView
                android:id="@+id/task_done_neck_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_list_neck_text"
                android:textColor="@color/orange"
                android:textSize="@dimen/default_text_size_12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/task_done_star"
            android:orientation="horizontal"
            android:gravity="center|bottom">

            <ImageView
                android:layout_width="@dimen/default_margin_size_2"
                android:layout_height="@dimen/default_margin_size_2"
                android:layout_marginEnd="@dimen/default_margin_size_1"
                android:src="@drawable/img_coin" />

            <TextView
                android:id="@+id/task_done_neck_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_list_neck_text"
                android:textColor="@color/orange"
                android:textSize="@dimen/default_text_size_12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/task_done_neck_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/default_margin_size_2"
            android:text="@string/task_done_neck_summary_text"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_14sp" />

    </RelativeLayout>
</LinearLayout>






