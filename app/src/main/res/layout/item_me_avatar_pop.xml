<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/default_margin_size_2"
    android:layout_marginStart="@dimen/default_margin_size_2"
    android:orientation="vertical"
    android:background="@drawable/btn_background_radius">

    <TextView
        android:id="@+id/item_me_avatar_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/item_me_avatar_photo"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        android:padding="@dimen/default_margin_size"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_2"/>
    <TextView
        android:id="@+id/item_me_avatar_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/item_me_avatar_pic"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        android:padding="@dimen/default_margin_size" />
</LinearLayout>