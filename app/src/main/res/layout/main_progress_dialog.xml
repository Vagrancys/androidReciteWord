<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin_size_2"
    android:background="@drawable/main_progress_dialog_back">
    <TextView
        android:id="@+id/main_progress_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/main_progress_title"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/default_margin_size_2"
        android:layout_marginStart="@dimen/default_margin_size_4"
        android:layout_marginEnd="@dimen/default_margin_size_4"/>
    <TextView
        android:id="@+id/main_progress_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_progress_title"
        android:layout_alignStart="@+id/main_progress"
        android:text="@string/main_progress_number"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_4"/>
    <TextView
        android:id="@+id/main_progress_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_progress_title"
        android:layout_alignEnd="@+id/main_progress"
        android:text="@string/main_progress_down"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_4"/>
    <ProgressBar
        android:id="@+id/main_progress"
        android:layout_width="@dimen/main_music_progress_width"
        android:layout_height="@dimen/default_margin_size_1"
        android:layout_below="@+id/main_progress_number"
        android:layout_marginTop="@dimen/default_margin_size_1"
        android:layout_marginBottom="@dimen/default_margin_size"
        android:layout_centerInParent="true"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/main_anim_progress_back"
        style="?android:attr/progressBarStyleHorizontal"
        android:secondaryProgress="0"/>
</RelativeLayout>



