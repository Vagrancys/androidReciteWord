<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_margin_size_8">

    <View
        android:id="@+id/details_error"
        android:layout_width="@dimen/default_margin_size_1"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/default_margin_size"
        android:background="@color/item_word_details_left"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/details_check"
        android:layout_width="@dimen/default_margin_size_3"
        android:layout_height="@dimen/default_margin_size_3"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/default_margin_size_2"
        android:button="@drawable/manage_check_bg"
        android:gravity="center"
        android:visibility="gone" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/default_margin_size_2">

        <TextView
            android:id="@+id/details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/default_margin_size"
            android:text="@string/item_word_details_title"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp" />

        <TextView
            android:id="@+id/details_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/default_margin_size"
            android:paddingTop="@dimen/default_margin_size"
            android:layout_toEndOf="@+id/details_title"
            android:text="@string/item_word_details_letter"
            android:textColor="@color/black_2"
            android:textSize="@dimen/default_text_size_18sp" />

        <TextView
            android:id="@+id/details_meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_title"
            android:layout_marginTop="@dimen/default_margin_size"
            android:text="@string/item_word_details_meaning"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/details_error_img"
        android:layout_width="@dimen/item_word_details_error"
        android:layout_height="@dimen/item_word_details_error"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/default_margin_size"
        android:layout_marginEnd="@dimen/default_margin_size_2"
        android:src="@drawable/icon_wrong"
        android:visibility="gone" />
</LinearLayout>





