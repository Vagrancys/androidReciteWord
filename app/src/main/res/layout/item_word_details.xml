<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_word_details_linear"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_word_details_linear_height">

    <View
        android:id="@+id/item_details_error_left"
        android:layout_width="@dimen/default_margin_size_1"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_size"
        android:background="@color/item_word_details_left" />

    <ImageView
        android:id="@+id/item_word_details_select"
        android:layout_width="@dimen/item_word_details_select"
        android:layout_height="@dimen/item_word_details_select"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/default_margin_size_2"
        android:src="@drawable/icon_word_book_selected"
        android:visibility="gone" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <TextView
            android:id="@+id/item_word_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size"
            android:text="@string/item_word_details_title"
            android:layout_marginTop="@dimen/default_margin_size"/>

        <TextView
            android:id="@+id/item_word_details_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_word_details_letter_size"
            android:textColor="@color/item_word_details_letter_color"
            android:text="@string/item_word_details_letter"
            android:layout_marginTop="@dimen/default_margin_size"
            android:layout_marginStart="@dimen/default_margin_size"
            android:layout_toEndOf="@+id/item_word_details_title"/>

        <TextView
            android:id="@+id/item_word_details_meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_word_details_meaning"
            android:textSize="@dimen/item_word_details_meaning_size"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/default_margin_size"
            android:layout_below="@+id/item_word_details_title"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/item_word_details_error"
        android:layout_width="@dimen/item_word_details_error"
        android:layout_height="@dimen/item_word_details_error"
        android:src="@drawable/icon_wrong"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/default_margin_size"
        android:layout_marginEnd="@dimen/default_margin_size_2"/>
</LinearLayout>





