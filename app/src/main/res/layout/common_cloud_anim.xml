<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cloud_go"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="gone">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/cloud_down_1" />

    <ImageView
        android:id="@+id/cloud_down_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/cloud_down_3" />

    <ImageView
        android:id="@+id/cloud_down_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/cloud_down_2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/cloud_up_1" />

    <ImageView
        android:id="@+id/cloud_up_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/cloud_up_2" />

    <ImageView
        android:id="@+id/cloud_up_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/cloud_up_3" />

    <ImageView
        android:id="@+id/cloud_img"
        android:layout_width="@dimen/default_margin_size_16"
        android:layout_height="@dimen/default_margin_size_9"
        android:layout_centerInParent="true"
        android:background="@drawable/readygo"
        android:padding="@dimen/default_margin_size" />
</RelativeLayout>