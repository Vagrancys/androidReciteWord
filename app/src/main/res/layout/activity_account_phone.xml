<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/common_toolbar"/>
    <TextView
        android:id="@+id/account_phone_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/account_phone_head"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_4"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/default_margin_size_2"
        android:layout_marginBottom="@dimen/default_margin_size_2"/>

    <TextView
        android:id="@+id/account_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_phone_number"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        android:layout_below="@+id/account_phone_head"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/default_margin_size_2"/>

    <TextView
        android:id="@+id/account_phone_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/btn_account_default_start_true"
        android:text="@string/account_default_phone_start"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size"
        android:layout_below="@+id/account_phone_number"
        android:layout_marginStart="@dimen/default_margin_size_2"
        android:layout_marginEnd="@dimen/default_margin_size_2" />
</RelativeLayout>