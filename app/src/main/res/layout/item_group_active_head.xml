<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_active_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/default_margin_size">

    <TextView
        android:id="@+id/group_active_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_size"
        android:padding="@dimen/default_margin_size"
        android:text="@string/group_active_text"
        android:textColor="@color/red"
        android:textSize="@dimen/default_text_size_18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_size"
        android:layout_toEndOf="@+id/group_active_text"
        android:src="@drawable/group_more_red" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_active_text"
        android:paddingStart="@dimen/default_margin_size"
        android:text="@string/group_active_title"
        android:textColor="@color/black_2"
        android:textSize="@dimen/default_text_size_14sp" />
</RelativeLayout>