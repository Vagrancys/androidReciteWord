<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_2">
    <include layout="@layout/common_toolbar"/>
    <RelativeLayout
        android:id="@+id/account_safety_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/default_margin_size">
        <TextView
            android:id="@+id/account_safety_relative_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_safety_relative_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/default_margin_size"
            android:layout_marginStart="@dimen/default_margin_size_2"
            android:layout_marginBottom="@dimen/default_margin_size" />
        <TextView
            android:id="@+id/account_safety_relative_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_safety_relative_title"
            android:textColor="@color/blue"
            android:textSize="@dimen/default_text_size_4"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/account_name_out"/>
        <ImageView
            android:id="@+id/account_name_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right_arrow_gray"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/default_margin_size"
            android:layout_marginEnd="@dimen/default_margin_size_2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_2"
            android:layout_below="@+id/account_safety_relative_text"/>
    </RelativeLayout>

</LinearLayout>