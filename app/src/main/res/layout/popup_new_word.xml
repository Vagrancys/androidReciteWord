<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingEnd="@dimen/default_margin_size"
    android:paddingStart="@dimen/default_margin_size">

    <TextView
        android:id="@+id/pop_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_size"
        android:text="@string/pop_process"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_18sp" />

    <TextView
        android:id="@+id/pop_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_size"
        android:text="@string/pop_random"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_18sp" />

    <TextView
        android:id="@+id/pop_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_size"
        android:text="@string/pop_group"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_18sp" />
</LinearLayout>