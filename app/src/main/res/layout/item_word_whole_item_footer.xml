<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/whole_item_footer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/word_book_layout_color"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="gone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin_size_2"
        android:layout_marginEnd="@dimen/default_margin_size_2"
        android:layout_marginTop="@dimen/default_margin_size_2"
        android:text="@string/whole_item_footer_text"
        android:textColor="@color/whole_item_footer_text_color"
        android:textSize="@dimen/whole_item_footer_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="none"
        android:text="@string/whole_item_footer_url"
        android:textColor="@color/whole_item_footer_url_color"
        android:textSize="@dimen/whole_item_footer_url_size" />
</LinearLayout>