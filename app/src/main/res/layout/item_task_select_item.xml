<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_background_radius"
    android:orientation="vertical"
    android:layout_margin="@dimen/default_margin_size">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_size"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/task_img"
            android:layout_width="@dimen/default_margin_size_5"
            android:layout_height="@dimen/default_margin_size_5"
            android:src="@drawable/icon_task"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:paddingStart="@dimen/default_margin_size"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/task_img">
            <TextView
                android:id="@+id/task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_list_title_text"
                android:textSize="@dimen/default_text_size_16sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/task_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/default_margin_size_1"
                android:text="@string/task_list_summary_text"
                android:textSize="@dimen/default_text_size_12sp"
                android:textColor="@color/black_1"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/task_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_task_complete"
            android:layout_marginEnd="@dimen/default_margin_size"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/task_turn"/>
        <ImageView
            android:id="@+id/task_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_go_task_detail"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/task_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/default_margin_size_1"
        android:paddingBottom="@dimen/default_margin_size_1"
        android:paddingStart="@dimen/default_margin_size">
        <ProgressBar
            android:id="@+id/task_progress"
            android:layout_width="@dimen/default_margin_size_0"
            android:layout_height="@dimen/default_margin_size_1"
            android:layout_marginEnd="@dimen/default_margin_size_2"
            android:layout_weight="3"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="5"
            android:progress="2"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/task_list_progressbar"/>
        <TextView
            android:id="@+id/task_progress_text"
            android:layout_width="@dimen/default_margin_size_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/task_list_progress_text"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_14sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/task_neck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/task_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/default_margin_size"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/default_margin_size_2_1"
                android:layout_height="@dimen/default_margin_size_2_1"
                android:src="@drawable/icon_star_group_small"
                android:layout_marginEnd="@dimen/default_margin_size_1"/>
            <TextView
                android:id="@+id/task_neck_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_list_neck_text"
                android:textColor="@color/orange"
                android:textSize="@dimen/default_text_size_12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/task_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/task_star"
            android:layout_margin="@dimen/default_margin_size"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/default_margin_size_2_1"
                android:layout_height="@dimen/default_margin_size_2_1"
                android:src="@drawable/img_coin"
                android:layout_marginEnd="@dimen/default_margin_size_1"/>
            <TextView
                android:id="@+id/task_neck_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_list_neck_text"
                android:textColor="@color/orange"
                android:textSize="@dimen/default_text_size_12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/task_neck_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_money"
            android:layout_marginStart="@dimen/default_margin_size"
            android:text="@string/task_list_neck_summary_text"
            android:textSize="@dimen/default_text_size_12sp"
            android:textColor="@color/black_1"/>

        <TextView
            android:id="@+id/task_button_neck"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin_size"
            android:background="@drawable/btn_task_list_button_neck"
            android:text="@string/task_list_neck_button_text"
            android:gravity="center"
            android:textSize="@dimen/default_text_size_14sp"
            android:textColor="@color/white"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/task_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_size"
            android:orientation="horizontal"
            android:gravity="center">
            <View
                android:layout_width="@dimen/default_margin_size_0"
                android:layout_height="1px"
                android:layout_weight="2"
                android:background="@color/black_2" />
            <TextView
                android:layout_width="@dimen/default_margin_size_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/task_list_accept"
                android:textSize="@dimen/default_text_size_12sp"
                android:textColor="@color/black_1"
                android:paddingStart="@dimen/default_margin_size"
                android:paddingEnd="@dimen/default_margin_size"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="2"
                android:background="@color/black_2" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin_size">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="@dimen/default_margin_size_2_1"
                    android:layout_height="@dimen/default_margin_size_2_1"
                    android:layout_marginEnd="@dimen/default_margin_size_1"
                    android:src="@drawable/icon_star_group_small" />

                <TextView
                    android:id="@+id/task_accept_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_list_neck_text"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/default_text_size_12sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/task_accept_button"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_task_list_button_neck"
                android:text="@string/task_list_neck_button_text"
                android:gravity="center"
                android:textSize="@dimen/default_text_size_14sp"
                android:textColor="@color/white" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
