<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/group_rank_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <View
            android:layout_width="@dimen/default_margin_size_0"
            android:layout_height="1px"
            android:layout_weight="2"
            android:background="@color/black_1"/>
        <TextView
            android:id="@+id/item_group_rank_number"
            android:layout_width="@dimen/default_margin_size_0"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/item_group_rank_number"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_14sp"
            android:padding="@dimen/default_margin_size"
            android:gravity="center"/>
        <View
            android:layout_width="@dimen/default_margin_size_0"
            android:layout_height="1px"
            android:layout_weight="2"
            android:background="@color/black_1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_rank_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/default_margin_size"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin_size_1"
            android:text="@string/group_rank_share"
            android:textColor="@color/black_2"
            android:textSize="@dimen/default_text_size_14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_share_invite_back" />
    </LinearLayout>
</FrameLayout>
