<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="@dimen/default_margin_size_26"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_background_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/default_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_word_manage_text"
        android:gravity="center"
        android:padding="@dimen/default_margin_size"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size_18sp" />

    <TextView
        android:id="@+id/default_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/default_margin_size_3"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/default_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/default_margin_size"
            android:paddingTop="@dimen/default_margin_size"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp" />

        <TextView
            android:id="@+id/default_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/default_margin_size"
            android:paddingTop="@dimen/default_margin_size"
            android:textColor="@color/blue"
            android:textSize="@dimen/default_text_size_18sp" />
    </LinearLayout>
</LinearLayout>