<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_2">
    <include layout="@layout/common_toolbar"/>
    <RelativeLayout
        android:id="@+id/account_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/default_margin_size_2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="@string/account_avatar_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp"/>
        <ImageView
            android:id="@+id/account_avatar_img"
            android:layout_width="@dimen/default_margin_size_6"
            android:layout_height="@dimen/default_margin_size_6"
            android:src="@drawable/user_avater"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_2"/>
    <RelativeLayout
        android:id="@+id/account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/default_margin_size_2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_name_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/account_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_14sp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/account_name_out"
            android:paddingEnd="@dimen/default_margin_size"/>
        <ImageView
            android:id="@+id/account_name_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right_arrow_gray"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_2" />
    <RelativeLayout
        android:id="@+id/account_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/default_margin_size_2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_nickname_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/account_nickname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_14sp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/account_nickname_out"
            android:paddingEnd="@dimen/default_margin_size"/>
        <ImageView
            android:id="@+id/account_nickname_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right_arrow_gray"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_2"/>
    <RelativeLayout
        android:id="@+id/account_safety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/default_margin_size_2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_safety_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right_arrow_gray"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_2"
        android:layout_marginBottom="@dimen/default_margin_size"/>
    <RelativeLayout
        android:id="@+id/account_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/default_margin_size_2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_phone_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/account_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_qq_title"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_14sp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/account_phone_out"
            android:paddingEnd="@dimen/default_margin_size"/>
        <ImageView
            android:id="@+id/account_phone_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right_arrow_gray"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_2"/>
    <RelativeLayout
        android:id="@+id/account_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/default_margin_size_2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_qq_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/account_qq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_qq_title"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_14sp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/account_qq_out"
            android:paddingEnd="@dimen/default_margin_size"/>
        <ImageView
            android:id="@+id/account_qq_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right_arrow_gray"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_2"/>
    <RelativeLayout
        android:id="@+id/account_weibo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/default_margin_size_2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_weibo_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_18sp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/account_weibo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_weibo_title"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_14sp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/account_weibo_out"
            android:paddingEnd="@dimen/default_margin_size"/>
        <ImageView
            android:id="@+id/account_weibo_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right_arrow_gray"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_2"
        android:layout_marginBottom="@dimen/default_margin_size"/>
    <TextView
        android:id="@+id/setting_account_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:text="@string/account_cancel"
        android:textColor="@color/blue"
        android:textSize="@dimen/default_text_size_18sp"
        android:paddingTop="@dimen/default_margin_size"
        android:paddingBottom="@dimen/default_margin_size"/>
</LinearLayout>
