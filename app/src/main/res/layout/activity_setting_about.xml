<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/common_toolbar"/>
    <ImageView
        android:id="@+id/about_img"
        android:layout_width="@dimen/default_margin_size_7"
        android:layout_height="@dimen/default_margin_size_7"
        android:src="@drawable/icon_tools_cichang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_margin_size_5"
        android:layout_below="@+id/toolbar"/>
    <TextView
        android:id="@+id/about_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_level_text"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/black_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_margin_size_2"
        android:layout_marginBottom="@dimen/default_margin_size_7"
        android:layout_below="@+id/about_img"/>
    <RelativeLayout
        android:id="@+id/about_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/default_margin_size"
        android:layout_below="@+id/about_level">
        <TextView
            android:id="@+id/about_offer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_offer_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/default_margin_size"
            android:layout_marginStart="@dimen/default_margin_size_2"
            android:layout_marginBottom="@dimen/default_margin_size"/>
        <ImageView
            android:id="@+id/about_offer_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right_arrow_gray"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/default_margin_size"
            android:layout_marginEnd="@dimen/default_margin_size_2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_2"
            android:layout_below="@+id/about_offer_text"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/about_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/default_margin_size"
        android:layout_below="@+id/about_offer">
        <TextView
            android:id="@+id/about_update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_update_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/default_margin_size"
            android:layout_marginStart="@dimen/default_margin_size_2"
            android:layout_marginBottom="@dimen/default_margin_size"/>
        <ImageView
            android:id="@+id/about_update_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right_arrow_gray"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/default_margin_size"
            android:layout_marginEnd="@dimen/default_margin_size_2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_2"
            android:layout_below="@+id/about_update_text"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/about_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/default_margin_size"
        android:layout_marginBottom="@dimen/default_margin_size_3"
        android:layout_below="@+id/about_update">
        <TextView
            android:id="@+id/about_report_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_report_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/default_margin_size"
            android:layout_marginStart="@dimen/default_margin_size_2"
            android:layout_marginBottom="@dimen/default_margin_size"/>
        <ImageView
            android:id="@+id/about_report_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right_arrow_gray"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/default_margin_size"
            android:layout_marginEnd="@dimen/default_margin_size_2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_2"
            android:layout_below="@+id/about_report_text"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/about_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_user_text"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/black_1"
        android:layout_marginBottom="@dimen/default_margin_size"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/about_report"/>
    <TextView
        android:id="@+id/about_advise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_advise_text"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/black_1"
        android:layout_marginBottom="@dimen/default_margin_size_3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/about_user"/>
    <TextView
        android:id="@+id/about_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_time_text"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/black_1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/about_advise"/>
</RelativeLayout>



