<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/user_friend_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/user_friend_add"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size"
        android:padding="@dimen/default_margin_size"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_friend_add_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_below="@+id/user_friend_add">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/user_friend_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_friend_number"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size"
        android:layout_below="@+id/user_friend_add_recycler"
        android:layout_alignParentStart="true"
        android:padding="@dimen/default_margin_size"/>
    <ImageView
        android:id="@+id/user_friend_add_img"
        android:layout_width="@dimen/default_margin_size_4"
        android:layout_height="@dimen/default_margin_size_4"
        android:layout_below="@+id/user_friend_add_recycler"
        android:layout_toStartOf="@+id/user_friend_add_more"
        android:src="@drawable/icon_add_friend"/>
    <TextView
        android:id="@+id/user_friend_add_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_friend_add_more"
        android:textColor="@color/blue"
        android:textSize="@dimen/default_text_size"
        android:layout_below="@+id/user_friend_add_recycler"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/default_margin_size"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_friend_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_friend_number"
        android:overScrollMode="never"
        android:scrollbars="none">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>