<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/pk_search_bg_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/pk_search_bg_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pk_search_top"
        android:layout_width="1dp"
        android:layout_height="@dimen/default_margin_size_5"
        android:layout_above="@+id/pk_search_fight"
        android:layout_toStartOf="@+id/pk_search_fight"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/pk_search_hint"
        android:layout_width="@dimen/default_margin_size_9"
        android:layout_height="@dimen/default_margin_size_2"
        android:layout_centerInParent="true" />
    <ImageView
        android:id="@+id/pk_search_fight"
        android:layout_width="@dimen/default_margin_size_9"
        android:layout_height="@dimen/default_margin_size_2"
        android:layout_centerInParent="true"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/pk_search_bottom"
        android:layout_width="1dp"
        android:layout_height="@dimen/default_margin_size_5"
        android:layout_below="@+id/pk_search_fight"
        android:layout_toEndOf="@+id/pk_search_fight"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/pk_search_enemy_bg"
        android:layout_width="@dimen/default_margin_size_5"
        android:layout_height="@dimen/default_margin_size_5"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/default_margin_size_8" />

    <TextView
        android:id="@+id/pk_search_pop_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pk_search_enemy_avatar_linear"
        android:layout_marginEnd="@dimen/default_margin_size"
        android:layout_toStartOf="@+id/pk_search_enemy_avatar_linear"
        android:text="@string/pk_search_pop_text"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_18sp"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/pk_search_enemy_avatar_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_size_8"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/pk_search_enemy_avatar"
            android:layout_width="@dimen/default_margin_size_6"
            android:layout_height="@dimen/default_margin_size_6"
            android:src="@drawable/big_gift" />
        <TextView
            android:id="@+id/pk_search_enemy_avatar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pk_search_enemy_avatar_text"
            android:textSize="@dimen/default_text_size_18sp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/default_margin_size" />
    </LinearLayout>
    <ImageView
        android:id="@+id/pk_search_sweep_outside"
        android:layout_width="@dimen/pk_search_sweep_outside_width"
        android:layout_height="@dimen/pk_search_sweep_outside_height"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_margin_size_6"/>
    <ImageView
        android:id="@+id/pk_search_sweep"
        android:layout_width="@dimen/pk_search_sweep_width"
        android:layout_height="@dimen/pk_search_sweep_height"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/pk_search_sweep_bottom"/>
    <ImageView
        android:id="@+id/pk_search_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_margin_size_4"/>
    <LinearLayout
        android:id="@+id/pk_search_avatar_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_margin_size_9"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/pk_search_avatar"
            android:layout_width="@dimen/default_margin_size_6"
            android:layout_height="@dimen/default_margin_size_6"
            android:src="@drawable/big_gift"
            android:layout_marginBottom="@dimen/default_margin_size" />
        <TextView
            android:id="@+id/pk_search_avatar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pk_search_avatar_text"
            android:textSize="@dimen/default_text_size_18sp"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>






