<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/group_rank_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin_size">

    <ImageView
        android:id="@+id/item_group_member_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/default_margin_size"
        android:src="@drawable/group_top_1"/>

    <TextView
        android:id="@+id/item_group_member_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/default_margin_size"
        android:paddingStart="@dimen/default_margin_size"
        android:text="@string/item_group_member_number"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_18sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_group_member_avatar"
        android:layout_width="@dimen/default_margin_size_5"
        android:layout_height="@dimen/default_margin_size_5"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_avatar"
        android:layout_marginStart="@dimen/default_margin_size_5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_group_member_avatar"
        android:layout_marginStart="@dimen/default_margin_size_2_1"
        android:layout_marginTop="@dimen/default_margin_size_1"
        android:layout_toEndOf="@+id/item_group_member_number"
        android:text="组长"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_10sp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/item_group_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/item_group_member_avatar"
        android:paddingBottom="@dimen/default_margin_size_1"
        android:paddingTop="@dimen/default_margin_size"
        android:text="@string/item_group_member_name"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_18sp"
        android:paddingStart="@dimen/default_margin_size"/>

    <LinearLayout
        android:id="@+id/item_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_group_member_name"
        android:layout_toEndOf="@+id/item_group_member_avatar"
        android:gravity="center"
        android:paddingStart="@dimen/default_margin_size" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/default_margin_size_1"
            android:src="@drawable/icon_star_group_small" />

        <TextView
            android:id="@+id/item_group_member_mind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/default_margin_size"
            android:text="1"
            android:textColor="@color/black_1"
            android:textSize="@dimen/default_text_size_12sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/mind"
        android:layout_width="@dimen/default_margin_size_2"
        android:layout_height="@dimen/default_margin_size_2"
        android:src="@drawable/icon_group_member_heart"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/default_margin_size" />
    <TextView
        android:id="@+id/item_group_member_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_group_member_star"
        android:textSize="@dimen/default_text_size_18sp"
        android:textColor="@color/black_1"
        android:layout_below="@+id/mind"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/default_margin_size"/>
</RelativeLayout>