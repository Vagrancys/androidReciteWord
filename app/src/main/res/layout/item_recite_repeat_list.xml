<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/recite_repeat_relative_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_size_2">

        <TextView
            android:id="@+id/recite_repeat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recite_list_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/recite_repeat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recite_list_time"
            android:textColor="#444"
            android:textSize="@dimen/default_text_size"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recite_repeat_relative_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="@dimen/default_margin_size_2"
        android:visibility="gone">

        <TextView
            android:id="@+id/recite_know_gate_text_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recite_list_text_next"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size" />

        <ImageView
            android:id="@+id/recite_know_search"
            android:layout_width="@dimen/recite_know_search_width"
            android:layout_height="@dimen/recite_know_search_height"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_search_white" />
    </RelativeLayout>
</LinearLayout>