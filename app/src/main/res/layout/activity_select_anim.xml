<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">
    <include  android:id="@+id/app_bar"
        layout="@layout/common_revise_anim"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_margin_size_9"
        android:layout_alignParentBottom="true"
        android:background="@drawable/deer_in_mountains"/>

    <RelativeLayout
        android:id="@+id/select_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:layout_marginTop="@dimen/default_margin_size_2">

        <TextView
            android:id="@+id/select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_anim_head_text"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size_18sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:id="@+id/select_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/default_margin_size_6"
            android:layout_marginTop="@dimen/default_margin_size"
            android:gravity="center"
            android:padding="@dimen/default_margin_size_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recite_anim_music_text"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_18sp"
                android:paddingEnd="@dimen/default_margin_size_1"/>

            <ImageView
                android:id="@+id/select_music_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_horn_white" />

        </LinearLayout>

        <ImageView
            android:id="@+id/select_win_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_title"
            android:layout_toEndOf="@+id/select_title"
            android:src="@drawable/icon_search_white"
            android:layout_marginTop="@dimen/default_margin_size_5"
            android:layout_marginStart="@dimen/default_margin_size_5"/>
        <TextView
            android:id="@+id/select_button_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_music"
            android:background="@drawable/btn_anim_button_back_nu"
            android:text="@string/select_anim_text_one"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size_16sp"
            android:gravity="center"
            android:layout_marginStart="@dimen/default_margin_size_2"
            android:layout_marginEnd="@dimen/default_margin_size_2"
            android:layout_marginBottom="@dimen/default_margin_size_2"/>

        <TextView
            android:id="@+id/select_button_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_button_one"
            android:background="@drawable/btn_anim_button_back_nu"
            android:layout_marginBottom="@dimen/default_margin_size_2"
            android:layout_marginEnd="@dimen/default_margin_size_2"
            android:layout_marginStart="@dimen/default_margin_size_2"
            android:gravity="center"
            android:text="@string/select_anim_text_two"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size_16sp" />

        <TextView
            android:id="@+id/select_button_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_button_two"
            android:layout_marginBottom="@dimen/default_margin_size_2"
            android:layout_marginEnd="@dimen/default_margin_size_2"
            android:layout_marginStart="@dimen/default_margin_size_2"
            android:background="@drawable/btn_anim_button_back_nu"
            android:gravity="center"
            android:text="@string/select_anim_text_three"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size_16sp" />

        <TextView
            android:id="@+id/select_button_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_button_three"
            android:background="@drawable/btn_anim_button_back_nu"
            android:text="@string/select_anim_text_four"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size_16sp"
            android:gravity="center"
            android:layout_marginStart="@dimen/default_margin_size_2"
            android:layout_marginEnd="@dimen/default_margin_size_2"
            android:layout_marginBottom="@dimen/default_margin_size_2" />
    </RelativeLayout>

    <include layout="@layout/common_foot_anim"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"/>

    <include layout="@layout/common_details_anim"/>

    <include layout="@layout/common_cloud_anim"/>
</RelativeLayout>










