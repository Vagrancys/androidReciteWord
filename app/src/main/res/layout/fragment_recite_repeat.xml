<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/recite_list_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/default_margin_size_2"
            android:paddingBottom="@dimen/default_margin_size_2">
            <TextView
                android:id="@+id/recite_repeat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="@string/recite_repeat_text"
                android:layout_marginStart="@dimen/default_margin_size"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size"/>
            <ImageView
                android:id="@+id/recite_list_lobby"
                android:layout_width="@dimen/recite_list_lobby"
                android:layout_height="@dimen/recite_list_lobby"
                android:src="@drawable/group_lobby_rule_icon"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/recite_repeat_text"
                android:layout_marginStart="@dimen/default_margin_size"/>
            <LinearLayout
                android:id="@+id/recite_item_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_recite_item_button"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/default_margin_size"
                android:layout_marginEnd="@dimen/default_margin_size"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_manage"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recite_item_manage"
                    android:gravity="center"
                    android:textColor="@color/recite_item_list_color"
                    android:layout_marginStart="@dimen/default_margin_size"
                    android:layout_marginEnd="@dimen/default_margin_size"
                    android:textSize="@dimen/recite_item_list_size"/>
            </LinearLayout>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recite_repeat_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/recite_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/default_recite_empty_width"
            android:layout_height="@dimen/default_recite_empty_height"
            android:layout_marginBottom="@dimen/default_margin_size_2"
            android:src="@drawable/pic_wordlist_review_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repeat_text"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size" />
    </LinearLayout>

</LinearLayout>