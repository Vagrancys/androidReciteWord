<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_friend_search_edit"
    android:orientation="vertical"
    android:padding="@dimen/default_margin_size">

    <TextView
        android:id="@+id/account_phone_adapter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:text="@string/account_phone_adapter_text"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size" />

    <TextView
        android:id="@+id/account_new_phone_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/default_margin_size"
        android:layout_alignParentEnd="true"
        android:text="@string/account_phone_adapter_num"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_4" />
</RelativeLayout>