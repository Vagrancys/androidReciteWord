<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_background_radius"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alert_inform_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_word_manage_text"
            android:gravity="center"
            android:padding="@dimen/default_margin_size"
            android:text="@string/alert_inform_title"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_margin_size_2"
            android:layout_marginBottom="@dimen/default_margin_size_2">
            <com.tramp.word.widget.TimeNumberPicker
                android:id="@+id/alert_inform_time"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginEnd="@dimen/default_margin_size">
            </com.tramp.word.widget.TimeNumberPicker>
            <com.tramp.word.widget.TimeNumberPicker
                android:id="@+id/alert_inform_times"
                android:layout_width="wrap_content"
                android:layout_height="120dp">
            </com.tramp.word.widget.TimeNumberPicker>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/alert_word_manage_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/default_margin_size_2"
                android:paddingTop="@dimen/default_margin_size_2"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size" />

            <TextView
                android:id="@+id/alert_word_manage_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/default_margin_size_2"
                android:paddingTop="@dimen/default_margin_size_2"
                android:textColor="@color/blue"
                android:textSize="@dimen/default_text_size" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>