<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_home_find_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_home_find_relative_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_margin_size_1">

    <ImageView
        android:id="@+id/item_home_find_pic"
        android:layout_width="@dimen/item_home_find_pic_width"
        android:layout_height="@dimen/item_home_find_pic_height"
        android:layout_margin="@dimen/default_margin_size_1"
        android:background="@drawable/btn_home_check_bg"
        android:src="@drawable/splash_img"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/item_home_find_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_home_find_text"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size_12sp"
        android:layout_below="@+id/item_home_find_pic"
        android:layout_marginBottom="@dimen/default_margin_size_1"
        android:layout_marginStart="@dimen/default_margin_size"
        android:gravity="left"/>

    <TextView
        android:id="@+id/item_home_find_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_home_find_number"
        android:textColor="@color/black_1"
        android:textSize="@dimen/default_text_size_10sp"
        android:layout_below="@+id/item_home_find_text"
        android:layout_marginStart="@dimen/default_margin_size_1"
        android:gravity="left"/>
</RelativeLayout>