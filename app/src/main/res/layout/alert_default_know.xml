<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/btn_background_radius"
        android:layout_marginStart="@dimen/default_margin_size_2"
        android:layout_marginEnd="@dimen/default_margin_size_2" >

        <ImageView
            android:id="@+id/default_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/u_dialog_book_res_upgrade_top"
            android:padding="@dimen/default_margin_size"/>

        <TextView
            android:id="@+id/default_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_margin_size_2"
            android:text="@string/recite_class_title"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size_20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_size_2"
            android:layout_marginTop="@dimen/default_margin_size"
            android:layout_marginEnd="@dimen/default_margin_size_2"
            android:layout_marginBottom="@dimen/default_margin_size_3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/default_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recite_class_text"
                android:textColor="@color/black_1"
                android:textSize="@dimen/default_text_size_16sp" />

            <TextView
                android:id="@+id/default_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recite_class_size"
                android:textColor="@color/black_1"
                android:textSize="@dimen/default_text_size_16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/default_know"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_about_update_ok"
            android:gravity="center"
            android:paddingTop="@dimen/default_margin_size"
            android:paddingBottom="@dimen/default_margin_size"
            android:layout_margin="@dimen/default_margin_size_2"
            android:textColor="@color/blue"
            android:textSize="@dimen/default_text_size_18sp" />
    </LinearLayout>
