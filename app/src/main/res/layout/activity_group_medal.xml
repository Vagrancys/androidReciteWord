<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/group_medal_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="@dimen/default_margin_size">
        <ImageView
            android:id="@+id/group_medal_out"
            android:layout_width="@dimen/default_margin_size_2"
            android:layout_height="@dimen/default_margin_size_2"
            android:src="@drawable/icon_acionbar_back_white"
            android:layout_marginBottom="@dimen/default_margin_size_2"/>
        <TextView
            android:id="@+id/group_medal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_medal_out"
            android:layout_toEndOf="@+id/group_medal_out"
            android:layout_marginTop="@dimen/default_margin_size"
            android:layout_marginStart="@dimen/default_margin_size_2"
            android:text="@string/group_medal_title"
            android:textSize="@dimen/default_text_size_3"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/group_medal_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_word_content_error"
            android:layout_below="@+id/group_medal_title"
            android:layout_toEndOf="@+id/group_medal_out"
            android:layout_marginTop="@dimen/default_margin_size"
            android:layout_marginStart="@dimen/default_margin_size_3"
            android:text="@string/group_medal_number"
            android:textSize="@dimen/default_text_size_5"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/group_medal_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_medal_rank"
            android:textSize="@dimen/default_text_size_5"
            android:textColor="@color/white"
            android:layout_below="@+id/group_medal_number"
            android:layout_toEndOf="@+id/group_medal_out"
            android:layout_marginTop="@dimen/default_margin_size"
            android:layout_marginStart="@dimen/default_margin_size_3"/>
        <ImageView
            android:id="@+id/group_medal_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_medal"
            android:layout_marginStart="@dimen/default_margin_size_2"
            android:layout_marginTop="-10dp"
            android:layout_below="@+id/group_medal_out"
            android:layout_toEndOf="@+id/group_medal_title"
            android:layout_marginBottom="@dimen/default_margin_size_2"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_medal_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/group_medal_relative"
        android:overScrollMode="never"
        android:scrollbars="none"/>
</RelativeLayout>




