<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/word_book_left_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/word_whole_left_layout"
    android:gravity="center">

    <TextView
        android:id="@+id/word_whole_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_size_2_1"
        android:layout_marginBottom="@dimen/default_margin_size_2_1"
        android:text="留学"
        android:textColor="@color/word_whole_text_color"
        android:textSize="@dimen/word_whole_text_size" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0">
    </View>
</LinearLayout>