<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/common_toolbar"
        layout="@layout/common_toolbar"/>
    <RelativeLayout
        android:id="@+id/group_details_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_below="@+id/common_toolbar"
        android:paddingStart="@dimen/default_margin_size_2"
        android:paddingTop="@dimen/default_margin_size_2"
        android:paddingBottom="@dimen/default_margin_size_2"
        android:paddingEnd="@dimen/default_margin_size">
        <ImageView
            android:id="@+id/group_details_img"
            android:layout_width="@dimen/default_margin_size_6"
            android:layout_height="@dimen/default_margin_size_6"
            android:src="@drawable/icon_avatar"/>
        <LinearLayout
            android:id="@+id/group_details_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/group_details_img"
            android:layout_marginBottom="@dimen/default_margin_size"
            android:gravity="center"
            android:paddingStart="@dimen/default_margin_size">
            <TextView
                android:id="@+id/group_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_margin_size"
                android:text="@string/user_group_title_text"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_18sp" />
            <ImageView
                android:id="@+id/group_details_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_level_small_10"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/group_details_img"
            android:layout_below="@+id/group_details_linear"
            android:paddingStart="@dimen/default_margin_size">
            <TextView
                android:id="@+id/group_details_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/group_details_number"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_18sp"/>
            <LinearLayout
                android:id="@+id/admin_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/default_text_size_18sp"
                    android:text="@string/group_details_head"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/group_details_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/default_text_size_18sp"
                    android:textColor="@color/white"/>
                <ImageView
                    android:layout_width="@dimen/default_margin_size"
                    android:layout_height="@dimen/default_margin_size"
                    android:src="@drawable/icon_acionbar_back_white"
                    android:rotation="180"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/group_details_relative"
        android:layout_above="@+id/group_details_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin_size_2"
            android:orientation="vertical"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details_scroll_one"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_text_size_18sp"
                    android:layout_alignParentStart="true"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/details_scroll_one_left"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/default_text_size_14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ocs_summarystaron"
                        android:layout_marginStart="@dimen/default_margin_size_1"
                        android:layout_marginEnd="@dimen/default_margin_size_1"/>
                    <TextView
                        android:id="@+id/details_star_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/details_scroll_one_number"
                        android:textSize="@dimen/default_text_size_14sp"
                        android:textColor="@color/orange"/>
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_1"
                android:layout_marginBottom="@dimen/default_margin_size_2_1"
                android:layout_marginTop="@dimen/default_margin_size_2_1"/>
            <RelativeLayout
                android:id="@+id/details_medal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/details_medal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details_scroll_two"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_text_size_18sp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/default_margin_size"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/details_medal_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details_scroll_two_left"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/default_text_size_14sp"
                    android:layout_toEndOf="@+id/details_medal_title"
                    android:layout_centerVertical="true"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/details_medal_recycler"
                    android:layout_width="@dimen/default_margin_size_16"
                    android:layout_height="@dimen/default_margin_size_3"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/details_medal_back"/>

                <ImageView
                    android:id="@+id/details_medal_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_go_task_detail"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_1"
                android:layout_marginBottom="@dimen/default_margin_size_2_1"
                android:layout_marginTop="@dimen/default_margin_size_2_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details_scroll_three"
                    android:textSize="@dimen/default_text_size_18sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/default_margin_size_3"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/details_tag_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_margin_size_4"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_1"
                android:layout_marginBottom="@dimen/default_margin_size_2_1"
                android:layout_marginTop="@dimen/default_margin_size_2_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_size_2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details_scroll_four"
                    android:textSize="@dimen/default_text_size_18sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/default_margin_size"
                    />
                <TextView
                    android:id="@+id/details_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details_scroll_four_time"
                    android:textSize="@dimen/default_text_size_14sp"
                    android:textColor="@color/black_1"/>
            </LinearLayout>

            <TextView
                android:id="@+id/details_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size_18sp"
                android:text="@string/details_scroll_four_text"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/group_details_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_recite_sign"
        android:layout_margin="@dimen/default_margin_size_2"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingTop="@dimen/default_margin_size"
        android:paddingBottom="@dimen/default_margin_size"
        android:text="@string/group_details_add"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size_18sp"/>
</RelativeLayout>



